{
	"name": "wp-starter",
	"version": "1.0.0",
	"description": "WordPress Starter Theme",
	"main": "webpack.config.js",
	"author": "Troy Chaplin",
	"license": "GPL-2.0",
	"keywords": [
		"webpack",
		"wordpress"
	],
	"scripts": {
		"test": "echo \"Error: no test specified\" && exit 1",
		"watch": "webpack --mode=development --config webpack.config.js --watch --colors",
		"dev": "webpack --mode=development --env=dev --config webpack.config.js ; rm -rf ./release",
		"stage": "webpack --mode=production --env=stage --config webpack.config.js ; rm -rf ./release",
		"prod": "webpack --mode=production --env=prod --config webpack.config.js ; rm -rf ./release"
	},
	"dependencies": {
		"dompurify": "^1.0.11",
		"jquery": "^3.4.1"
	},
